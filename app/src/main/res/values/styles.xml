<resources>
    <style name="Theme.ProfessionalDevelopment" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_standard_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewButtonStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_large</item>

        <item name="android:inputType">text</item>
    </style>


        <style name="TabTextAppearance">
            <item name="android:textSize">12sp</item>
        </style>

</resources>
